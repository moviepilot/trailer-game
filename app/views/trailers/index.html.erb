<h1>Listing trailers</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Youtube link</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trailers.each do |trailer| %>
  <tr>
    <td><%= link_to 'link', trailer.youtube_link, :target => '_blank' %></td>
    <td><%= youtube_player trailer.youtube_id %></td>
    <td><%= trailer.category %></td>
    <td><%= link_to 'Show', trailer %></td>
    <td><%= link_to 'Edit', edit_trailer_path(trailer) %></td>
    <td><%= link_to 'Destroy', trailer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

